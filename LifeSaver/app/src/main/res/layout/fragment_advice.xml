<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AdviceFragment"
    android:background="@color/white"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenu"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="18dp"
        android:gravity="center_vertical|center_horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Advice and Guidance"
            android:fontFamily="@font/poppins_black"
            android:textSize="28dp"
            android:gravity="center"
            android:lineSpacingMultiplier="0.8"
            android:layout_marginBottom="-8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Essential Advice and Guidance for Your Well-being, and to help you  stay safe."
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:lineSpacingMultiplier="0.8"
            android:layout_marginBottom="13dp"
            />

        <!-- one -->
        <LinearLayout
            android:id="@+id/goToMyths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_space"
            android:padding="15dp"
            android:layout_marginBottom="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="25dp"
                    android:lineSpacingMultiplier="0.8"
                    android:text="Myths about \nSuicide"
                    android:gravity="top"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:backgroundTint="@color/colorPrimaryLight"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:layout_gravity="center"
                        android:textSize="10dp"
                        android:lineSpacingMultiplier="0.8"
                        android:text="2 min reading"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:paddingHorizontal="6dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/white"
                android:padding="20dp"

                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/myths"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

    <!-- two -->
    <LinearLayout
        android:id="@+id/goToGrounding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_space"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="25dp"
                android:lineSpacingMultiplier="0.8"
                android:text="Grounding \nTechniques"
                android:gravity="top"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/colorPrimaryLight"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:lineSpacingMultiplier="0.8"
                    android:text="1 min reading"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:paddingHorizontal="6dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/white"
            android:padding="20dp"

            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ground"
                app:tint="@color/colorPrimary"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <!-- one -->
    <LinearLayout
        android:id="@+id/goToAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_space"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="25dp"
                android:lineSpacingMultiplier="0.8"
                android:text="About Your \nHope App"
                android:gravity="top"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape3"
                android:backgroundTint="@color/colorPrimaryLight"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:lineSpacingMultiplier="0.8"
                    android:text="how to use it"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:paddingHorizontal="6dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/white"
            android:padding="20dp"

            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/about"
                app:tint="@color/colorPrimary"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:src="@drawable/advicehome"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-60dp"
        />

    <include
        android:id="@+id/bottomMenu"
        layout="@layout/bottom_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>