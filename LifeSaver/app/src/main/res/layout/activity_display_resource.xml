<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayResourceActivity"
    android:background="@color/colorSecondary">

    <!-- START TOOLBAR -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"
            app:elevation="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal">

                <!-- Your Toolbar content -->
                <include layout="@layout/toolbar_1"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <!-- END TOOLBAR -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
                <TextView
                    android:id="@+id/resource_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My resource name"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="19dp"
                    android:textColor="@color/colorDark"></TextView>
                <TextView
                    android:id="@+id/resource_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My resource description"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/colorDark"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/call_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="18dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/baseline_phone_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/resource_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+212-0000000"
                    android:textColor="@color/colorDark"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:inputType="phone"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap to call now"
                    android:textColor="@color/colorDark"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:alpha="0.5"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sms_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/msg_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="18dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/baseline_message_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/resource_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+212-0000000"
                    android:textColor="@color/colorDark"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:inputType="phone"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap to text now"
                    android:textColor="@color/colorDark"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:alpha="0.5"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/text_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/baseline_email_24"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/resource_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="example@mail"
                        android:textColor="@color/colorDark"
                        android:fontFamily="@font/poppins"
                        android:textSize="15dp"
                        android:inputType="textEmailAddress"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap to mail now"
                        android:textColor="@color/colorDark"
                        android:fontFamily="@font/poppins"
                        android:textSize="15dp"
                        android:alpha="0.5"></TextView>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/website_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/web_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/baseline_web_asset_24"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/resource_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.myResource"
                        android:textColor="@color/colorDark"
                        android:fontFamily="@font/poppins"
                        android:textSize="15dp"
                        android:inputType="phone"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap to visit now"
                        android:textColor="@color/colorDark"
                        android:fontFamily="@font/poppins"
                        android:textSize="15dp"
                        android:alpha="0.5"></TextView>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/bottomMenu"
        layout="@layout/bottom_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>